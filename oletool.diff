+class DateTime:
+    def __init__(self):
+        self.day = 0
+        self.month = 0 
+        self.year = 0
+        self.hour = 0
+        self.second = 0
+
+class DirNode:
+
+    def __init__(self, entry):
+        self.Nodes = []
+        self.Entry = entry;
+        self.HierachicalName = ''
+
+    def isStorage():
+        return entry.Type == Directory.Type.RootStorage
+
+class OleContainer:
+
+    def __init__(self,filePath, params ):
+        self.filePath = filePath
+        self.header = None
+        self.params = params
+        self.pos = None
+        
+    def __getModifiedTime(self, entry):
